<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvMembresiaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de la Membresía"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_ver_membresia_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_membresia_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_membresia_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_membresia_fecha_creacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Creación: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_membresia_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btn_ver_membresia_atras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atrás"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#6C6A61"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_ver_membresia_editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Editar"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_ver_membresia_eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
