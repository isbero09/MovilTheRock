<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearMenbresiausuario"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="CREAR MEMBRESÍA DE USUARIO"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/red" />

    <!-- Usuario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_usuario_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- Membresía -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membresía"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_membresia_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- ID de Membresía -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID de Membresía"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_membresia_id_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="20dp" />

    <!-- Precio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_precio_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_marginBottom="20dp" />

    <!-- Fecha de Pago -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Pago"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_fecha_pago_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- Fecha de Inicio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Inicio"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_fecha_inicio_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- Fecha de Fin -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Fin"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_fecha_fin_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <!-- Estado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/membresiausuario_estado_nuevo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="Ej: Activo / Inactivo"
        android:layout_marginBottom="20dp" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btn_add_membresiausuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Membresía" />

</LinearLayout>
