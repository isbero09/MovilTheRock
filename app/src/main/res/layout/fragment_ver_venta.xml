<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvVentaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de la Venta"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_ver_venta_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: X"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_vendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendedor: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Venta: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_pagado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagado: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tv_ver_venta_fecha_pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Pago: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btn_ver_venta_atras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AtrÃ¡s"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#6C6A61"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_ver_venta_editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Editar"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_ver_venta_eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
